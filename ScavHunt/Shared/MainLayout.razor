@inherits LayoutComponentBase

<PageTitle>ScavHunt</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="d-grid" style="grid-template-rows: auto 1fr auto;">
        <AuthorizeView>
            <Authorized>
                <div class="top-row px-4 auth bg-warning justify-content-start">
                    <div class="me-auto">Currently logged in as an administrator</div>
                    <div class="top-row float-end bg-transparent">
                        <LoginDisplay />
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div></div>
            </NotAuthorized>
        </AuthorizeView>

        <article class="content">
            @Body
        </article>
        <footer class="footer">
            <div class="container">
                <div class="row mt-3 pt-3">
                    <div class="col-lg mb-3">
                        <img class="footer-logo my-auto mx-auto d-block" src="/assets/logo_full_blue.png" alt="SIGGRAPH"/>
                    </div>
                    <div class="col-sm text-center mb-3">
                        <div class="footer-col-title">SIGGRAPH Info</div>
                        <div>
                            <NavLink class="footer-col-link" href="https://s2022.siggraph.org/">Event Home</NavLink>
                        </div>
                    </div>
                    <div class="col-sm text-center mb-3">
                        <div class="footer-col-title">Scavenger Hunt Info</div>
                        <div>
                            <NavLink class="footer-col-link" href="/info/rules">Rules</NavLink>
                        </div>
                        <div><NavLink class="footer-col-link" href="/info/instructions">Instructions</NavLink></div>
                        <div><NavLink class="footer-col-link" href="/info/support">Support</NavLink></div>
                    </div>
                </div>
                <div class="row text-end py-3 text-muted">
                    <div class="col-sm">&copy; 2022 - Legal stuff</div>
                </div>
            </div>
        </footer>
    </main>
</div>
